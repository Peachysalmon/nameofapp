<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <% @products.each_with_index do |product, index| %>
    <li data-target="#carouselExampleIndicators" data-slide-to="<%= index %>" class="<%= " active " if product == @products.first %>"></li>
    <% end %>
  </ol>

  <!-- Slides -->
  <div class="carousel-inner">
    <% @products.each do |product| %>
    <div class="carousel-item<%= " active" if product == @products.first %>">
      <%= image_tag(product.image_url,class: "img-fluid") %>
      <div class="carousel-caption d-none d-md-block">
        <%= product.name %>
      </div>
    </div>
    <% end %>
  </div>

  <!-- Controls -->
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
