<div class="col-xs-6 col-md-4 col-lx-4 title-align">
   <a class="title-align--product" href="#"><%= product.name %></a>
   <p><%= product.description.first(80) %>...</p>
   <p>Color: <%= product.color %></p>
    <%= image_tag(product.image_url, class: "img-preimage") %><br>
   <div class="price-tag"><%= number_to_currency(product.price) %> â‚¬</div>
   <div style="margin:30px;">
     <button class="btn btn-light"><%= link_to 'Show', product %></button>
     <% if signed_in? && current_user.admin? %>
     <button class="btn btn-light"><%= link_to 'Edit', edit_product_path(product) %></button>
     <button class="btn btn-light"><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></button>
     <% end %>
   </div>
   <p>ID #<%= product.id %></p>
 </div><!-- /col -->
