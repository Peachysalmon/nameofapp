<p id="notice"><%= notice %></p>
<div class="row">
  <div class="rowflex">
    <%= image_tag(@product.image_url, class: "img-fluid") %>
  </div>
</div>
<hr>
<div class="row space">
  <div class="rowflex">
    <div class="rowtext">
      <p class="section-title">Name:</p>
      <h3><%= @product.name %></h3>
    </div>
  </div>
  <div class="rowflex">
    <div class="rowtext">
      <p class="section-title">Description:</p>
      <p><%= @product.description %></p>
    </div>
  </div>
  <div class="rowflex">
    <div class="rowtext">
      <p class="section-title">Image url:</p>
      <p><%= @product.image_url %></p>
    </div>
  </div>
  <div class="rowflex">
    <div class="rowtext">
      <%= link_to 'Edit', edit_product_path(@product) %> |
      <%= link_to 'Back', products_path %>
    </div>
  </div>
</div>
