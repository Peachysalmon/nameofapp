<p id="notice"><%= notice %></p>
<div class="row">
  <div class="rowflex">
    <%= image_tag(@product.image_url, width: "600px", class: "img-fluid img-zoom", data_zoom_image: @product.image_url) %>

    <p>Average Rating: <div class="rated" id="average_rating" data-score="<%= @product.average_rating %>" ></div></p>
    <%= form_with(url: '/payments/create') do |form| %>
      <%= render partial: "shared/stripe_checkout_button" %>
    <% end %>
  </div>
</div>
<hr>
<div class="container">
  <div class="row space">
    <% cache @product do %>
    <div class="rowflex">
      <div class="rowtext">
        <p class="section-title">Name:</p>
        <h3><%= @product.name %></h3>
      </div>
    </div>
    <div class="rowflex">
      <div class="rowtext">
        <p class="section-title">Description:</p>
        <p><%= @product.description %></p>
      </div>
    </div>
    <div class="rowflex">
      <div class="rowtext">
        <p class="section-title">Color</p>
        <p><%= @product.color %></p>
      </div>
    </div>
    <div class="rowflex">
      <div class="rowtext">
        <p class="section-title">Image url:</p>
        <p><%= @product.image_url %></p>
      </div>
    </div>
    <div class="rowflex">
      <div class="rowtext">
        <p class="section-title">Price:</p>
        <p><%= number_to_currency(@product.price, :unit => "â‚¬") %></p>
      </div>
    </div>
    <div class="rowflex">
      <div class="rowtext">
        <%= link_to 'Edit', edit_product_path(@product) %> |
        <%= link_to 'Back', products_path %>
      </div>
    </div>
    <% end %>
    <% logger.debug "Product: #{@product.name}"%>
  </div>

  <div class="review">
    <div class="alert alert-info" style="display:none" role="alert">A new comment was posted!</div>
    <%= render 'new_comment' %>
    <%= render 'comments' %>
    <%= will_paginate @comments %>
  </div>
<!--  <div class="review">
    <h1>Reviews</h1>
      <div class="review-body">
        Highest rating review comment: <%= @product.highest_rating_comment %>
      </div>
      <div class="review-body">
        Lowest rating review comment: <%= @product.lowest_rating_comment %>
      </div>-->
  </div><!-- review end -->
</div><!-- container end -->
